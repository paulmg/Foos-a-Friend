{
  "name": "Foos a Friend",
  "version": "0.0.5",
  "manifest_version": 2,
  "description": "Foos the shit out of your friends",
  "homepage_url": "http://www.paulgraffix.com",
  "icons": {
    "16": "icons/faf_16.png",
    "48": "icons/faf_48.png",
    "128": "icons/faf_128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["js/jquery/jquery.min.js", "src/bg/background.js"],
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/faf_48.png",
    "default_title": "Foos a Friend"
  },
  "permissions": [
    "gcm",
    "notifications",
    "tabs",
    "storage",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [ "https://*/*", "http://*/*" ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/inject/content.js"
      ],
      "css": [
        "src/inject/content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "src/inject/*"
  ]
}
