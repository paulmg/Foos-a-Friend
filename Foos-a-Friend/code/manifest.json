{
  "name": "Foos a Friend",
  "version": "0.0.6",
  "manifest_version": 2,
  "description": "Foos the shit out of your friends",
  "homepage_url": "http://www.paulgraffix.com",
  "icons": {
    "16": "images/faf_16.png",
    "48": "images/faf_48.png",
    "128": "images/faf_128.png"
  },
  "browser_action": {
    "default_icon": "images/faf_48.png",
    "default_title": "Foos a Friend"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "permissions": [
    "gcm",
    "notifications",
    "tabs",
    "storage",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [{
    "matches": [ "http://*/*", "https://*/*" ],
    "js": [ "js/content.js" ],
    "css": [ "css/content.css" ]
  }],
  "options_page": "html/options.html",
  "web_accessible_resources": [ "js/*", "html/*", "css/*", "images/*" ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
